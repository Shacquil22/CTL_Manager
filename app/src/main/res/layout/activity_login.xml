<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    tools:context=".Login">

    <!--Title-->
    <LinearLayout
        android:id="@+id/titleL"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:text="Login"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="?attr/text_color"
            android:textSize="30dp" />

    </LinearLayout>

    <!--Logo-->
    <LinearLayout
        android:id="@+id/logoSec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleL"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="109dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo1" />

    </LinearLayout>




    <!--credentials-->
    <RelativeLayout
        android:id="@+id/CredentialBox"
        android:layout_width="350dp"
        android:layout_height="230dp"
        android:layout_below="@+id/logoSec"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usernameL"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:hint="Username"
            app:boxBackgroundColor="?attr/background_color"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="?attr/icon_color"
            app:endIconMode="clear_text"
            app:hintTextColor="?attr/text_color"
            app:startIconDrawable="@drawable/user"
            app:startIconTint="@color/mainColorIcons">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtUsername"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:textColor="?attr/text_color" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordL"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_below="@+id/usernameL"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="Password"
            app:boxBackgroundColor="?attr/background_color"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="?attr/icon_color"
            app:endIconMode="clear_text"
            app:hintTextColor="?attr/text_color"
            app:startIconDrawable="@drawable/lock"
            app:startIconTint="@color/mainColorIcons">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:inputType="textPassword"
                android:textColor="?attr/text_color" />

        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/cbx_rememberMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordL"
            android:layout_marginTop="10dp"
            android:text="Remember Me"
            android:textColor="?attr/text_color"
            android:layout_marginLeft="30dp"/>


        <!--Forgot password-->
        <TextView
            android:id="@+id/tv_forgotPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordL"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:clickable="true"
            android:text="Forgot Password?"
            android:textColor="@color/mainColorIcons" />

    </RelativeLayout>

    <!--Login button-->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_below="@+id/CredentialBox"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/mainColorIcons"
        android:text="Login"
        android:textSize="18sp" />

    <!--Sign Up Section-->
    <!-- Left line-->
    <View
        android:id="@+id/lineL"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:layout_below="@+id/btnLogin"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:background="@color/white">

    </View>

    <TextView
        android:id="@+id/txtOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_centerInParent="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:text="Or Continue With"
        android:textColor="@color/white" />

    <!-- Right line -->
    <View
        android:id="@+id/lineR"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:layout_below="@+id/btnLogin"
        android:layout_alignParentRight="true"
        android:layout_marginRight="65dp"
        android:layout_marginTop="20dp"
        android:background="@color/white">

    </View>

    <!--Login with social media-->

    <!--Facebook-->
    <RelativeLayout
        android:id="@+id/fb"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_below="@id/lineL"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="65dp">

        <ImageButton
            android:id="@+id/btnFacebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/facebook" />
    </RelativeLayout>

    <!--Google-->
    <RelativeLayout
        android:id="@+id/gg"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_below="@id/lineL"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true">

        <ImageButton
            android:id="@+id/btnGoogle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/google" />
    </RelativeLayout>

    <!--Twitter-->
    <RelativeLayout
        android:id="@+id/tw"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_below="@id/lineL"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="270dp">

        <ImageButton
            android:id="@+id/btnTwitter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/twitter"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!--Sign Up-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gg"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/signMess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textAlignment="center"
            android:textColor="?attr/text_color"/>

        <TextView
            android:id="@+id/tv_Signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/signMess"
            android:clickable="true"
            android:text="Sign Up"
            android:textColor="@color/mainColorIcons" />

    </RelativeLayout>

</RelativeLayout>